<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/color_block"
        android:layout_width="40dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/history_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintStart_toEndOf="@id/color_block"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="Nsdsd"/>

    <TextView
        android:id="@+id/history_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintStart_toEndOf="@id/history_name"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="Nsdsd"/>

    <TextView
        android:id="@+id/history_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintStart_toEndOf="@id/history_last_name"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="89564756473"/>

    <TextView
        android:id="@+id/label_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/state"
        app:layout_constraintStart_toEndOf="@id/color_block"
        app:layout_constraintTop_toBottomOf="@id/history_name"/>

    <TextView
        android:id="@+id/history_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@id/label_state"
        app:layout_constraintTop_toBottomOf="@id/history_name"
        tool:text="REJECTED"/>

    <TextView
        android:id="@+id/history_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_padding"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/large_margin"
        style="@style/AppTheme.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="25000"/>

    <TextView
        android:id="@+id/valuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:text="@string/valuta"
        app:layout_constraintStart_toEndOf="@id/history_amount"
        app:layout_constraintBottom_toBottomOf="@id/history_amount"/>

    <TextView
        android:id="@+id/label_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/percent"
        app:layout_constraintStart_toEndOf="@id/history_state"
        app:layout_constraintTop_toBottomOf="@id/history_name"/>

    <TextView
        android:id="@+id/history_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_padding"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintStart_toEndOf="@id/label_percent"
        app:layout_constraintTop_toBottomOf="@id/history_name"
        tool:text="12.4"/>

    <TextView
        android:id="@+id/label_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/period"
        app:layout_constraintStart_toEndOf="@id/history_percent"
        app:layout_constraintTop_toBottomOf="@id/history_name"/>

    <TextView
        android:id="@+id/history_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_padding"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintStart_toEndOf="@id/label_period"
        app:layout_constraintTop_toBottomOf="@id/history_name"
        tool:text="30"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@id/color_block"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>